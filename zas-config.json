{
    "directories": {
        "root": "zasenv",
        "supporters": "supporters",
        "actors": "actors"
    },

    "actors": {
        "foreground": "foreground",
        "background": "background"
    },

    "extensions": {
        "class": "class.php",
        "abstractClass": "aclass.php",
        "interface": "ifc.php",
        "trait": "trait.php",
        "constantsClass": "const.php",
        "include": "inc.php",
        "config": "conf",
        "actors": {
            "foreground": "php",
            "background": "bkg.php"
        }
    },

    "templatePath": {
        "class": "/supporters/templates/class.tpl",
        "abstractClass": "/supporters/templates/aclass.tpl",
        "interface": "/supporters/templates/interface.tpl",
        "trait": "/supporters/templates/trait.tpl",
        "constantsClass": "/supporters/templates/const.tpl",
        "actors" : {
            "foreground": "/supporters/templates/foreground.tpl",
            "background": "/supporters/templates/background.tpl"
        }
    },

    "path": {
        "class": "/supporters/classes",
        "abstractClass": "/supporters/abstracts",
        "interface": "/supporters/interfaces",
        "trait": "/supporters/traits",
        "constantsClass": "/supporters/constants",
        "config": "/supporters/configs",
        "actors": {
            "background": "/actors/background",
            "foreground": "/actors/foreground"
        }
    },

    "nameConventionsRegex": {
        "abstractClass": "^Abstract\\w+$",
        "interface": "^\\w+Interface$",
        "trait": "\\w+Trait$",
        "constantsClass": "\\w+Constants$",
        "class": ".*"
    }
    
}