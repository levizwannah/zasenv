{
    "directories": {
        "root": "zasenv",
        "supporters": "supporters",
        "actors": "actors"
    },

    "actors": {
        "foreground": "foreground",
        "background": "background"
    },

    "extensions": {
        "class": "class.php",
        "abstractClass": "aclass.php",
        "interface": "ifc.php",
        "trait": "trait.php",
        "constantsClass": "const.php",
        "include": "inc.php",
        "config": "conf"
    },

    "templatePath": {
        "class": "/dev/templates/class.tpl",
        "abstractClass": "/dev/templates/aclass.tpl",
        "interface": "/dev/templates/interface.tpl",
        "trait": "/dev/templates/trait.tpl",
        "constantsClass": "/dev/templates/const.tpl"
    },

    "path": {
        "class": "/supporters/classes",
        "abstractClass": "/supporters/abstracts",
        "interface": "/supporters/interfaces",
        "trait": "/supporters/traits",
        "constantsClass": "/supporters/constants",
        "config": "/supporters/configs"
    },

    "nameConventionsRegex": {
        "abstractClass": "^Abstract\\w+$",
        "interface": "^\\w+Interface$",
        "trait": "\\w+Trait$",
        "constantsClass": "\\w+Constants$",
        "class": ".*"
    }
    
}